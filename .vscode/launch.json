{
    "configurations": [
        {
            "type": "java",
            "name": "SweetshopApplication",
            "request": "launch",
            "mainClass": "com.sweetshop.SweetshopApplication",
            "projectName": "sweetshop"
        },
        {
            "type": "java",
            "name": "Launch Current Java File",
            "request": "launch",
            "mainClass": "${file}",
            "projectName": "${workspaceFolderBasename}"
        },
        {
            "type": "java",
            "request": "attach",
            "name": "Attach by Process ID",
            "processId": "${command:PickJavaProcess}"
        }
    ]
}